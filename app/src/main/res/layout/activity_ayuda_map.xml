<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background2"
    tools:context=".Ayudas.ayudaESTADO">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ayuda en Mapa"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25dp"
            />
        <Button
            android:textColor="#FFFFFF"
            android:textSize="0sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="4dp"

            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@drawable/line"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ver organismos"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            />

        <Button
            android:textColor="#FFFFFF"
            android:textSize="0sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="4dp"

            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@drawable/line"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/handchart"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="1.- Al seleccionar un marcador en el mapa, se desplegará un cuadro donde se mostrará la información del organismo"
                    android:textSize="15dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="2.- Al hacer click sobre el cuadro desplegado, podrás ver a más detalle el organismo."
                    android:textSize="15dp"
                    />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:textColor="#FFFFFF"
            android:textSize="0sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="4dp"

            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@drawable/line"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Añadir organismos"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            />

        <Button
            android:textColor="#FFFFFF"
            android:textSize="0sp"
            android:layout_marginTop="6dp"

            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@drawable/line"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/touch"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="1.-Al seleccionar la icono de (+) en la esquina superior derecha podrás agregar un nuevo organismo desde tu ubicación exacta."
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="2.-Al dejar presionado en cualquier ubicación del mapa podrás agregar un nuevo organismo."
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>




</ScrollView>